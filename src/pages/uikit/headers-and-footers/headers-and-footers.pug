extends ../../../base/base.pug

block title
  | headers-and-footers

block main
  include ../../../components/logo/logo
  include ../../../components/header/header
  include ../../../components/footer/footer
  +logo('../../../', 'gray')
  -
    const headersData = [
    {'content': 'Home', 'isActive': 'true'},
    {'content': 'About Us'},
    {'content': 'Services', 'submenu': [{'content': 'Service_1'}, {'content': 'Service_2'}]},
    {'content': 'Careers'},
    {'content': 'News'},
    {'content': 'Documentation'},
    ];
    const footersData = {
    'description': 'Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.',
    'contentLists': [
    {
      'title': 'Navigation',
      'links': ['About Us', 'News', 'Support', 'Products']
    },
    {
      'title': 'About us',
      'links': ['Who we are', 'Our team', 'Careers', 'Investors']
    },
    {
      'title': 'Support',
      'links': ['Documentation', 'Community', 'Get in Touch']
    },
    {
      'title': 'Subscribe to our newsletter',
      'subscribe': 'Receive our latest news and promotions in your inbox!'
    }
    ]
    };

  div.container
    div.container__item
      +header(headersData, false, false)
    div.container__item
      +header(headersData, true)
    div.container__item
      +footer(footersData)
