extends ../../../base/base.pug

block title
  | Form Elements

block main
  include ../../../components/logo/logo
  include ../../../components/text-field/text-field
  include ../../../components/masked-text-field/masked-text-field
  include ../../../components/dropdown/dropdown
  include ../../../components/date-dropdown/date-dropdown
  include ../../../components/subscription-text-field/subscription-text-field
  +logo('../../../', 'gray')
  -
    const options = [
    {'title': 'Взрослые', 'id': 'adult', 'defaultCount': '0', 'minCount': '0', 'maxCount': '10'},
    {'title': 'Дети', 'id': 'children', 'defaultCount': '0', 'minCount': '0', 'maxCount': '10'},
    {'title': 'Младенцы', 'id': 'babies', 'defaultCount': '0', 'minCount': '0', 'maxCount': '10'}
    ];
    const dropdownData = [
    {'id': 'start1-id', 'label': 'date Dropdown', 'placeholder': 'дд.мм.гггг', 'classes': ''},
    {'id': 'end1-id', 'label': 'date Dropdown', 'placeholder': 'дд.мм.гггг', 'classes': ''},
    ];
    const filterDropdownData = {'id': 'filter1-id', 'label': 'filter date dropdown', 'placeholder': '19 авг - 23 авг', 'classes': ''};
  div.form-elements
    div.form-elements__elements-wrapper
      div.form-elements__element.form-elements__element--margin-bottom-21
        +textField('email', 'email', 'email-id', '', 'Email', 'Text Field', 'Default')
      div.form-elements__element.form-elements__element--margin-bottom-21
        +textField('text', 'text', 'text-1-id', 'text-field__input--focused', 'This is pretty awesome', 'Text Field', 'Hover / Focus')
      div.form-elements__element.form-elements__element--margin-bottom-24
        +dropdown('Сколько гостей', options, 'Dropdown')
      div.form-elements__element.form-elements__element--margin-bottom-40
        +maskedTextField('text', 'masked-text', 'masked-text-id', 'masked-text-field--date', 'дд.мм.гггг', 'masked text field')
      div.form-elements__element.form-elements__element--margin-bottom-40
        +date-dropdown(true, dropdownData)
      div.form-elements__element.form-elements__element--margin-bottom-40
        +date-dropdown(false, filterDropdownData)
      div.form-elements__element
        +subscriptionTextField('')
