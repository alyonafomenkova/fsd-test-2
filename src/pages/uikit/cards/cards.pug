  +logo('../../../', 'gray')
  -
    const filterDropdownData = {'id': 'filter1-id', 'label': null, 'placeholder': '19 авг - 23 авг', 'classes': ''};//
    const roomInfoCardsData = [
    {
      'images': [
        {'imgSrc': '../../../images/rooms/room-888/1.png'},
        {'imgSrc': '../../../images/rooms/room-888/2.png'},
        {'imgSrc': '../../../images/rooms/room-888/3.png'},
        {'imgSrc': '../../../images/rooms/room-888/4.png'},
      ],
      'title': '№ 888',
      'type': 'люкс',
      'rating': '5',
      'reviewsCount': 145,
    },
    {
    'images': [
      {'imgSrc': '../../../images/rooms/room-840/1.png'},
      {'imgSrc': '../../../images/rooms/room-840/2.png'},
      {'imgSrc': '../../../images/rooms/room-840/3.png'},
      {'imgSrc': '../../../images/rooms/room-840/4.png'},
    ],
    'title': '№ 840',
    'rating': '4',
    'reviewsCount': 65,
    },
    ];

  div.cards
    div.cards__wrapper
      div.cards__card
        +searchForm
      div.cards__card
        +registrationForm

    div.cards__wrapper
      div.cards__card
        +bookingForm
      div.cards__card
        +loginForm

    div.cards__wrapper
      div.cards__card.cards__card--datepicker
