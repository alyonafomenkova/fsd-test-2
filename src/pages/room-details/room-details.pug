block meta
  meta(name="keywords", content="toxin")
  meta(name="description" content="Учебный проект FSD. Room details page.")

block title
  | room details

block content
  include ../../components/header/header
  include ../../components/room-details/room-details
  include ../../components/pie-chart/pie-chart
  include ../../components/reviews/reviews
  include ../../components/bullet-list/bullet-list
  include ../../components/booking-form/booking-form
  include ../../components/footer/footer

  +header(headersData, false, true)
  main.details
    div.details__images-wrapper
      img.details__image(src=require('../../pages/room-details/images/1.png').default width='68.125%' height='100%' alt='Photo of bedroom')
      img.details__image(src=require('../../pages/room-details/images/2.png').default width='31.875%' height='50%' alt='Photo of cabinet')
      img.details__image(src=require('../../pages/room-details/images/3.png').default width='31.875%' height='50%' alt='Photo of bedroom')
    div.details__content-wrapper
      div.details__content
        +roomDetails(roomDetailsData, 'Сведения о номере')
        +pie-chart(pieChartData, 'Впечатления от номера')
        div.details__reviews-wrapper
          +reviews(reviewsData)
        div.details__rules-wrapper
          +bulletList(bulletData, 'Правила')
          div.details__cancel-rule
            h2.details__cancel-rule-title Отмена
            p.details__cancel-rule-description Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
      +bookingForm
  +footer(footersData)
