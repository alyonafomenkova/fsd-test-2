block meta
  meta(name="keywords", content="toxin")
  meta(name="description" content="Учебный проект FSD. Cards для Uikit.")

block title
  | Cards

block content
  include ../../components/logo/logo
  include ../../components/date-dropdown/date-dropdown
  include ../../components/search-form/search-form
  include ../../components/registration-form/registration-form
  include ../../components/login-form/login-form
  include ../../components/booking-form/booking-form
  include ../../components/room-info-cards/room-info-cards
  +logo('uikit')

  main.cards
    div.cards__wrapper
      div.cards__card
        +searchForm
      div.cards__card
        +registrationForm

    div.cards__wrapper
      div.cards__card
        +bookingForm
      div.cards__card
        +loginForm

    div.cards__wrapper
      div.cards__card
        +date-dropdown({'isInline': 'true'})
      div.cards__card.cards__card_content_room
        +roomInfoCards(roomInfoCardsData)
