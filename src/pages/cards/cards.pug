extends ../../base/base.pug
include ../../components/logo/logo
include ../../components/date-dropdown/date-dropdown
include ../../components/search-form/search-form
include ../../components/registration/registration
include ../../components/login/login
include ../../components/booking-form/booking-form
include ../../components/room-info-cards/room-info-cards

block vars
  - const data = require('./cards.json');
block meta
  meta(name="keywords", content="toxin")
  meta(name="description" content="Учебный проект FSD. Cards для Uikit.")

block title
  | Cards

block content
  div.cards
    div.cards__logo-wrapper
      +logo('uikit')
    main.cards__wrapper
      div.cards__content-wrapper
        div.cards__column-wrapper
          div.cards__card
            +search-form
          div.cards__card
            +registration

        div.cards__column-wrapper
          div.cards__card
            +booking-form
          div.cards__card
            +login

        div.cards__column-wrapper
          div.cards__card
            +date-dropdown({'isInline': 'true'})
          div.cards__card.cards__card_content_room
            +room-info-cards(data.roomInfoCardsData)
