mixin rating(currentRating = 5)
  - let n = 1;
  - let maxRating = 5;
  div.rating.js-rating
    ul.rating__list
      while n <= maxRating
        li.rating__item.js-rating__item(
          data-value = n,
          class = currentRating >= n && "rating__item_selected js-rating__item_selected"
          )
          span.rating__star.js-rating__star
        - n++
