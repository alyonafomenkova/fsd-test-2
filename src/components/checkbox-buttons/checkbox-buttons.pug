mixin checkboxButtons(checkboxData, titleOfList, isExpandable=null)
  div.checkbox.js-checkbox(class=isExpandable ? 'checkbox--expandable' : '')
    if titleOfList
      h2.checkbox__title !{titleOfList}
    ul.checkbox__list
      each item in checkboxData
        li.checkbox__item(class=item.isDisabled==='true' ? 'checkbox__item--disabled' : '')
          input.checkbox__input.visually-hidden(
            type = 'checkbox',
            id = item.name+'-id',
            name = item.name,
            checked=(item.isChecked==='true' ? 'checked' : undefined),
            disabled=(item.isDisabled==='true' ? 'checked' : undefined),
          )
          label.checkbox__label(for=item.name+'-id') #{item.label}
