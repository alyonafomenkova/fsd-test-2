mixin social-list(options = {})
  -
    const defaultItems = require('../../components/social-list/social-list.json');
    const {
      items = defaultItems
    } = options;

  ul.social-list
    each item in items
      - let { id, link, text } = item;
      li.social-list__item
        a(
          class=`social-list__link social-list__link_type_${id}`,
          href=link,
          target='_blank',
          rel='noopener noreferrer'
          )
          span.social-list__text !{text}
          span(class=`social-list__icon social-list__icon_type_${id}`)
