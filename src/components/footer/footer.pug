include ../logo/logo
include ../button/button
include ../social-list/social-list
include ../subscription-text-field/subscription-text-field

mixin footer({items, isUikit} = {})
  -
    const defaultItems = {
      "description": "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»",
      "contentLists": [
        {
          "title": "навигация",
          "links": ["О нас", "Новости", "Служба поддержки", "Услуги"]
        },
        {
          "title": "о нас",
          "links": ["О сервисе", "Наша команда", "Вакансии", "Инвесторы"]
        },
        {
          "title": "Служба поддержки",
          "links": ["Соглашения", "Сообщества", "Связь с нами"]
        },
        {
          "title": "Подписка",
          "subscribe": "Получайте специальные предложения и новости сервиса"
        }
      ],
      "copyrightText": "Copyright © 2018 Toxin отель. Все права зачищены."
    };
    items = items || defaultItems;

  footer.footer(class=isUikit ? "footer-uikit" : "")
    div.footer__wrapper
      div.footer__description-wrapper
        +logo
        p.footer__description !{items.description}
      div.footer__content-wrapper
        each item in items.contentLists
          div.footer__content-item
            h3.footer__title !{item.title}
            if (item.links)
              ul.footer__content-list
                each link in item.links
                  li.footer__content-unit
                    a.footer__content-link !{link}
            if (item.subscribe)
              div.footer__subscribe-wrapper
                p.footer__subscribe-text !{item.subscribe}
                +subscription-text-field({"type": "Email", "name": "subscription-text", "placeholder": "Email"})
    hr.footer__separator
    div.footer__bottom-wrapper
      p.footer__copyright-text !{items.copyrightText}
      +social-list()
