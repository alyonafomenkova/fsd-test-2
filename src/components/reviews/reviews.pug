mixin reviews({title, items, isVisibleCountOfReviews} = options)
  include ../like-button/like-button
  div.reviews
    div.reviews__wrapper
      if (title)
        h2.reviews__title !{title}
      if (items && isVisibleCountOfReviews)
        span.reviews__count !{items.length} отзыва
    ul.reviews__list
      if (items)
        each item in items
          li.reviews__item
            div.reviews__author
              img.reviews__avatar(
                src = require('../../components/reviews/images/' + item.imgName).default
                width='48' height='48' alt='Avatar')
              div.reviews__author-info
                span.reviews__author-name !{item.authorName}
                span.reviews__date !{item.date}
            div.reviews__text-wrapper
              +likeButton(item.likeButton)
              p.reviews__text !{item.text}
