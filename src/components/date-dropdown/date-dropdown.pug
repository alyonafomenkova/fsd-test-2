include ../masked-text-field/masked-text-field
mixin date-dropdown(options)
  if options.isInline
    div.date-dropdown.js-date-dropdown.date-dropdown--inline.js-date-dropdown--inline
      div.date-dropdown__item--inline.js-date-dropdown__item--inline
  else
    div.date-dropdown.js-date-dropdown(
      class = options.endLabel ? 'date-dropdown--with-to-inputs js-date-dropdown--with-to-inputs' : 'date-dropdown--filter js-date-dropdown--filter'
    )
      div.date-dropdown__item(class = !options.endLabel ? 'date-dropdown__item--filter' : '')
        label.date-dropdown__label !{options.startLabel}
          input.date-dropdown__input(
            type='text'
            class = options.endLabel ? 'date-dropdown__input--first js-date-dropdown__input--first' : 'date-dropdown__input--filter js-date-dropdown__input--filter'
            placeholder = options.placeholder ? options.placeholder : 'дд.мм.гггг'
            readonly
            data-position='bottom left'
          )
      if (options.endLabel)
        div.date-dropdown__item
          label.date-dropdown__label !{options.endLabel}
            input.date-dropdown__input.date-dropdown__input--second.js-date-dropdown__input--second(
              type='text'
              placeholder = options.placeholder ? options.placeholder : 'дд.мм.гггг'
              readonly
              data-position='bottom right'
            )
