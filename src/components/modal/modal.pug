mixin modal(type)
  include ../login-form/login-form
  include ../registration-form/registration-form
  if(type='login')
    section.login-modal.js-login-modal
      div.login-modal__overlay.js-login-modal__overlay
      div.login-modal__form
        +loginForm
  if(type='registration')
    section.registration-modal.js-registration-modal
      div.registration-modal__overlay.js-registration-modal__overlay
      div.registration-modal__form
        +registrationForm
