mixin rich-checkbox(options = {})
  -
    const defaultItems = require('../../components/rich-checkbox/rich-checkbox.json');
    const {
    title,
    items = defaultItems
    } = options;

  div.rich-checkbox
    if (title)
      h2.rich-checkbox__title !{title}
    ul.rich-checkbox__list
      each item in items
        - let { name, title, description, isChecked, isDisabled } = item;
        li.rich-checkbox__item
          input.rich-checkbox__input(
            type="checkbox",
            id=`${name}-id`,
            name=name,
            checked=isChecked,
            disabled=isDisabled,
          )
          label.rich-checkbox__label(for=`${name}-id`)
            div.rich-checkbox__info-wrapper
              p.rich-checkbox__item-title #{title}
              p.rich-checkbox__description #{description}
