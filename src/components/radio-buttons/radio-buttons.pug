mixin radioButtons({title, items} = options)
  div.radio
    if (title)
      h2.radio__title !{title}
    ul.radio__list
      if (items)
        each item, index in items
          li.radio__item
            input.radio__input(
              type = 'radio',
              id = item.name + '-' + index + '-id',
              name = item.name,
              checked = item.isChecked,
              disabled = item.isDisabled,
            )
            label.radio__label(for = item.name + '-' + index + '-id') #{item.label}
