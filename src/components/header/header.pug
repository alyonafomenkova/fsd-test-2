mixin header(data, isUserAuthorized, isRu)
  include ../logo/logo
  include ../buttons/buttons
  header.header
    div.header__wrapper
      +logo('../../../', 'mainLogo')
      div.header__content-wrapper.header__content-wrapper-menu--opened
        div.header__buttons-wrapper
          button.header__toggle-menu-btn.header__toggle-menu-btn--nojs(type='button')
            i.header__toggle-menu-icon.header__toggle-menu-icon--open menu
            i.header__toggle-menu-icon.header__toggle-menu-icon--close expand_less
          if(isUserAuthorized)
            span.header__user-name Cosmin Negoita
          else
            a.header__show-auth-btn.header__show-auth-btn--nojs(href='auth.html') person
            div.header__auth-wrapper
              if(isRu)
                +button('button', 'button button--border header__login', 'войти')
                +button('button', 'button button--filled header__register', 'зарегистрироваться')
              else
                +button('button', 'button button--border header__login', 'Login')
                +button('button', 'button button--filled header__register', 'REGISTER')
        nav.header__main-nav
          ul.header__nav-list
            each item in data
              li.header__nav-item(class=item.submenu ? 'header__submenu header__submenu--close' : '')
                a.header__nav-link(class=item.isActive ? 'header__nav-link--active' : '') !{item.content}
                if(item.submenu)
                  button.header__toggle-submenu-btn.header__toggle-submenu-btn--nojs
                    i.header__toggle-submenu-icon.header__toggle-submenu-icon--open expand_more
                    i.header__toggle-submenu-icon.header__toggle-submenu-icon--close expand_less
                  ul.header__submenu-list
                    each subitem in item.submenu
                      li.header__submenu-item
                        a.header__submenu-item !{subitem.content}
