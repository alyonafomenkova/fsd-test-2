mixin pagination
  div.pagination
    ul.pagination__list
      li.pagination__item
        a.pagination__link.pagination__link_value_current 1
      li.pagination__item
        a.pagination__link 2
      li.pagination__item
        a.pagination__link 3
      li.pagination__item
        a.pagination__link ...
      li.pagination__item
        a.pagination__link 15
      li.pagination__item
        a.pagination__link.pagination__link_value_next arrow_forward
    p.pagination__description 1 – 12 из 100+ вариантов аренды
