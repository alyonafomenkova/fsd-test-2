mixin pagination
  -
    const items = [
      {content: '1', state: 'current'},
      {content: '2'},
      {content: '3'},
      {content: '...'},
      {content: '15'},
      {content: 'arrow_forward', state: 'next'},
    ];
    const stateModifiers = {
      current: 'pagination__link_value_current',
      next: 'pagination__link_value_next',
    };
  div.pagination
    ul.pagination__list
      each item in items
        - let {content, state} = item;
        li.pagination__item
          a.pagination__link(class=stateModifiers[state]) !{content}
    p.pagination__description 1 – 12 из 100+ вариантов аренды
