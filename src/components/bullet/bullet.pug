mixin bullet(options = {})
  -
    const defaultItems = require('../../components/bullet/bullet.json');
    const {
      title,
      items = defaultItems,
      isUikit
    } = options;

  div.bullet
    if (title)
      h2.bullet__title(class=isUikit && "bullet__title_font_montserrat") !{title}
    ul.bullet__list
      each item in items
        - let { name } = item;
        li.bullet__item #{name}
